<p id="notice"><%= notice %></p>

<h1 class=header>Drugs</h1>

<div class=table_containers>
<table>
  <thead>
    <tr>
      <th >Generic name</th>
      <th>Brand name</th>
      <th>Dosage</th>
      <th>Description</th>
      <th>Price</th>
      <th>Company</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @drugs.each do |drug| %>
      <tr>
        <td><%= drug.drug_brandname %></td>
        <td><%= drug.drug_genericname %></td>
        <td><%= drug.drug_dosage %></td>
        <td><%= drug.drug_description %></td>
        <td><%= drug.drug_price %></td>
        <td><%= drug.company.company_name %></td>
        <td><%= link_to 'Show', drug %></td>
        <td><%= link_to 'Edit', edit_drug_path(drug) %></td>
        <td><%= link_to 'Destroy', drug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<div class =buttons_container>
<%= link_to 'New Drug', new_drug_path %>
</div>