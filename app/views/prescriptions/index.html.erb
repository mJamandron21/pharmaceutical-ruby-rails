<p id="notice"><%= notice %></p>

<h1>Prescriptions</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Patient fname</th>
      <th>Patient mname</th>
      <th>Patient lname</th>
      <th>Patient address</th>
      <th>Prescribedqty</th>
      <th>Totalcost</th>
      <th>Description</th>
      <th>Doctors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prescriptions.each do |prescription| %>
      <tr>
        <td><%= prescription.date %></td>
        <td><%= prescription.patient_fname %></td>
        <td><%= prescription.patient_mname %></td>
        <td><%= prescription.patient_lname %></td>
        <td><%= prescription.patient_address %></td>
        <td><%= prescription.prescribedqty %></td>
        <td><%= prescription.totalcost %></td>
        <td><%= prescription.description %></td>
        <td><%= prescription.doctors_id %></td>
        <td><%= link_to 'Show', prescription %></td>
        <td><%= link_to 'Edit', edit_prescription_path(prescription) %></td>
        <td><%= link_to 'Destroy', prescription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prescription', new_prescription_path %>
