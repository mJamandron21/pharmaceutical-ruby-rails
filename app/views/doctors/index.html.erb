<p id="notice"><%= notice %></p>

<h1 class=header>Doctors</h1>

<div class=table_containers>
<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Middlename</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Phonenumber</th>
      <th>Gender</th>
      <th>Clinicname</th>
      <th>Clinicaddress</th>
      <th>Licensenumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.firstname %></td>
        <td><%= doctor.middlename %></td>
        <td><%= doctor.lastname %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.phonenumber %></td>
        <td><%= doctor.gender %></td>
        <td><%= doctor.clinicname %></td>
        <td><%= doctor.clinicaddress %></td>
        <td><%= doctor.licensenumber %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<div class =buttons_container>
<%= link_to 'New Doctor', new_doctor_path %>
</div>